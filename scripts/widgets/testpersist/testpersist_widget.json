{
  "widget": {
    "id": "testpersist",
    "name": "Test Results Persistence CSV",
    "version": "2.0.0",
    "description": "Persiste les résultats de tests de pression dans des fichiers CSV et publie une confirmation",
    "author": "MaxLink Team",
    "dashboard_compatibility": "1.0+"
  },
  "mqtt": {
    "required": true,
    "broker": {
      "host": "localhost",
      "port": 1883,
      "username": "mosquitto",
      "password": "mqtt"
    },
    "topics": {
      "subscribe": [
        {
          "topic": "SOUFFLAGE/ESP32/RTP",
          "description": "Résultats de tests des ESP32 (topic unique)",
          "format": "csv",
          "example": "08/07/2025,14H46,B,24042551110457205101005321,1"
        }
      ],
      "publish": [
        {
          "topic": "SOUFFLAGE/{machine_id}/ESP32/result/confirmed",
          "description": "Confirmation après persistance réussie",
          "format": "csv",
          "example": "08/07/2025,14H46,B,24042551110457205101005321,1",
          "note": "Publie la même ligne CSV que reçue après écriture réussie"
        }
      ]
    }
  },
  "collector": {
    "enabled": true,
    "script": "testpersist_collector.py",
    "service_name": "maxlink-widget-testpersist",
    "service_description": "MaxLink Test Results Persistence CSV Service",
    "update_intervals": {
      "default": 0,
      "note": "Event-driven, no polling"
    }
  },
  "storage": {
    "base_path": "/home/prod/Documents/traçabilité",
    "file_mapping": {
      "509": "509.csv",
      "511": "511.csv",
      "998": "RPDT.csv",
      "999": "RPDT.csv"
    },
    "format": "csv",
    "headers": false,
    "barcode_machine_position": {
      "start": 6,
      "length": 3,
      "note": "Positions 7,8,9 depuis la gauche (indices 6,7,8 en programmation)"
    }
  },
  "dependencies": {
    "python_packages": [
      "paho-mqtt"
    ],
    "system_packages": [],
    "services": ["mosquitto"],
    "python_version": ">=3.7"
  }
}